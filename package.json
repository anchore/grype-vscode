{
  "name": "grype-vscode",
  "displayName": "grype-vscode",
  "publisher": "anchore",
  "repository": {
    "type": "git",
    "url": "https://github.com/anchore/grype-vscode.git"
  },
  "description": "Scans your project for manifests to discover vulnerable libraries and artifacts.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.48.0"
  },
  "categories": [
    "Linters",
    "Other"
  ],
  "keywords": [
    "grype",
    "vulnerabilities",
    "vulnerability",
    "dependency",
    "dependencies",
    "scan",
    "scanner"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "colors": [
      {
        "id": "grype.error",
        "description": "Status bar color when vulnerabilities are found.",
        "defaults": {
          "dark": "#e03207",
          "light": "#af1400",
          "highContrast": "#d60101"
        }
      }
    ],
    "commands": [
      {
        "command": "extension.scanWorkspace",
        "title": "Grype: Scan Workspace"
      },
      {
        "command": "extension.enableGrypeGlobally",
        "title": "Grype: Enable auto scanning globally"
      },
      {
        "command": "extension.disableGrypeGlobally",
        "title": "Grype: Disable auto scanning globally"
      },
      {
        "command": "extension.enableGrypeWorkspace",
        "title": "Grype: Enable auto scanning for workspace"
      },
      {
        "command": "extension.disableGrypeWorkspace",
        "title": "Grype: Disable auto scanning for workspace"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "build": "tsc -p ./ --noEmitOnError",
    "lint": "eslint src --ext ts --max-warnings 0",
    "format-check": "prettier --check .",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run build && npm run lint",
    "test-unit": "echo 'modify when unit tests have been added' && exit 0",
    "test-integration": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/follow-redirects": "^1.13.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.6.0",
    "@types/request": "^2.48.5",
    "@types/tar": "^4.0.3",
    "@types/tar-stream": "^2.1.0",
    "@types/vscode": "^1.48.0",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "glob": "^7.1.6",
    "mocha": "^8.0.1",
    "prettier": "2.0.5",
    "typescript": "^3.8.3",
    "vscode-test": "^1.4.0"
  },
  "dependencies": {
    "follow-redirects": "^1.13.0",
    "tar": "^6.0.5"
  },
  "prettier": {}
}
